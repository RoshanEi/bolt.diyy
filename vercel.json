{
  "buildCommand": "pnpm run build",
  "outputDirectory": "build/client",
  "installCommand": "pnpm install",
  "framework": "remix",
  "functions": {
    "build/server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/((?!build/).*)",
      "destination": "/build/server/index.js"
    }
  ],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}